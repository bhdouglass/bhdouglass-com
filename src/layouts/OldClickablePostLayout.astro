---
import BaseLayout from './BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import { categoriesToTags } from '../utilites';

import '../styles/blog.css';

const { content } = Astro.props;

const hide = content.draft && process.env.NODE_ENV !== 'development';
---

<BaseLayout title={`${content.title} | Software Space by Brian Douglass`} prism={true} feedUrl="/feeds/tech.xml">
  {hide ? (<h1 class="text-center mt-2">There isn't anything here yet!</h1>) : (
    <BlogPost title={content.title} date={content.date} blogUrl="/blog/tech" blogTitle="Software Space" tags={categoriesToTags(content.categories)} draft={content.draft}>
      <div class="mb-4 alert alert-light" role="alert">
        This post is for an older release of Clickable, check out the
        <a href="https://clickable-ut.dev/en/latest/changelog.html">docs</a> for current information.
      </div>
      <slot />
    </BlogPost>
  )}
</BaseLayout>
