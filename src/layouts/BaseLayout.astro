---
const { redirect, title, feedUrl, prism, isBlogPost } = Astro.props;

const pageTitle = title || 'Brian Douglass | Senior Software Engineer';
---

<html lang="en" itemscope itemtype="http://schema.org/WebPage">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{pageTitle}</title>

    <meta name="description" content="Senior Software Engineer" />

    <!-- Schema.org markup -->
    <meta itemprop="name" content={pageTitle} />
    <meta itemprop="description" content="Brian Douglass, Senior Software Engineer" />
    <meta itemprop="image" content="https://bhdouglass.com/images/logo.png" />

    <!-- Open Graph data -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bhdouglass.com" />
    <meta property="og:image" content="https://bhdouglass.com/images/logo.png" />
    <meta property="og:description" content="Brian Douglass, Senior Software Engineer" />
    <meta property="og:site_name" content="Brian Douglass" />

    {redirect && (<meta http-equiv="refresh" content={`0; URL=${redirect}`} />)}

    <link rel="alternate" href={feedUrl || '/feeds/tech.xml'} type="application/rss+xml" title="RSS feed">

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    {prism && (<link rel="stylesheet" href="/css/prism.css" />)}

    <style global>
      body {
        background-image: url(/images/background.jpg);
        background-position: left center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-color: #001140;
      }

      section, article {
        margin-left: auto;
        margin-right: auto;
        margin-top: 2em;
        margin-bottom: 2em;
        max-width: 800px;
        background-color: rgba(0, 17, 63, 0.9);
        padding: 2em;
      }

      footer {
        margin-left: auto;
        margin-right: auto;
        margin-top: 2em;
        max-width: 800px;
        background-color: rgba(0, 17, 63, 0.9);
        padding: 1em;
      }

      a, a:hover, a:visited {
        color: #e94100;
      }
    </style>

    <script defer data-domain="bhdouglass.com" src="https://analytics.bhdouglass.com/js/plausible.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container justify-content-start">
        <a class="navbar-brand" href="/">
          <img src="/images/logo.svg" alt="" width="32" height="32" class="d-inline-block align-text-top">
          <span class="d-none d-sm-inline">Brian Douglass</span>
        </a>
        <ul class="navbar-nav flex-row ms-4">
          <li class="nav-item me-4">
            <a class="nav-link" href="https://gitlab.com/bhdouglass" rel="noopener noreferrer">GitLab</a>
          </li>
          <li class="nav-item me-4">
            <a class="nav-link" href="/blog">Blogs</a>
          </li>
          <li class="nav-item me-4">
            <a class="nav-link" href="/#contact">Contact Me</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container text-light">
      <slot />
    </div>

    <footer class="text-light text-center">
      <small>
        Blog posts licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</a>.
        Code licensed under <a href="http://www.gnu.org/licenses/gpl-3.0.html">GNU GPL v3</a>.
      </small>
      <br/>
      <small>
        Icons from the NounProject.com:
        <a href="https://thenounproject.com/icon/brain-206188/" rel="noopener noreferrer">1</a>,
        <a href="https://thenounproject.com/icon/curly-bracket-1418243/" rel="noopener noreferrer">2</a>,
        <a href="https://thenounproject.com/icon/curly-brackets-1418245/" rel="noopener noreferrer">3</a>.
        <a href="https://www.freepik.com/free-vector/abstact-hexagon-background-memphis-style_14649409.htm" rel="noopener noreferrer">Background image</a> from freepik.com.
        Built using <a href="https://astro.build/" rel="noopener noreferrer">astro</a> ðŸš€.
      </small>
    </footer>
  </body>
</html>
