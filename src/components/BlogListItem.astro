---
import { MarkdownInstance } from "astro";
import { format } from "date-fns";
import { Frontmatter } from "../types";
import { categoriesToTags } from "../utilities";
import PostTags from "./PostTags.astro";

export type Props = {
  post: MarkdownInstance<Frontmatter>;
};

const { post } = Astro.props;
const image = post.frontmatter.image;
const link = `${post.url}/`;
---

<article class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 ${image ? 'md:grid-cols-2' : ''}`}>
  {
    image && (
      <a class="relative block group" href={link ?? 'javascript:void(0)'}>
        <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">
          {image && (
            <img
              src={image}
              class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
              sizes="(max-width: 900px) 400px, 900px"
              alt={post.frontmatter.title}
            />
          )}
        </div>
      </a>
    )
  }
  <div class="mt-2">
    <header>
      <div class="mb-1">
        <span class="text-sm">
          <time datetime={post.frontmatter.date}>{format(new Date(post.frontmatter.date), 'MMMM d, yyyy')}</time>
        </span>
      </div>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading text-gray-700 dark:text-slate-300">
        {
          link ? (
            <a class="hover:text-primary-800 dark:hover:text-primary-700 transition ease-in duration-200 underline" href={link}>
              {post.frontmatter.title}
            </a>
          ) : (
            post.frontmatter.title
          )
        }

        {post.frontmatter.draft && '(DRAFT)'}
      </h2>
    </header>

    {post.frontmatter.description && <p class="flex-grow text-gray-500 dark:text-slate-400 text-lg">{post.frontmatter.description}</p>}
    <footer class="mt-5">
      <PostTags tags={categoriesToTags(post.frontmatter.categories)} />
    </footer>
  </div>
</article>
