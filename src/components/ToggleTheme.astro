---
export interface Props {
	label?: string;
	class?: string;
}
const {
	label = 'Toggle between Dark and Light mode',
	class:
		className = 'text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-hidden focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-toggle-color-scheme>
  <i class="ri-sun-line ri-xl"></i>
</button>
