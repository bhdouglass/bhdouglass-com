{
  "name": "bhdouglass.com",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development astro dev --verbose",
    "start": "npm run dev",
    "copy-bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css* public/css/",
    "pre-build": "npm run resume-export && npm run copy-bootstrap",
    "build": "npm run pre-build && NODE_ENV=production astro build --verbose && npm run post-build",
    "post-build": "npm run fix-404 && npm run analytics-to-resume",
    "fix-404": "sed -i 's=../assets=/assets=g' dist/404.html",
    "analytics-to-resume": "sed -i 's|</head>|<script defer data-domain=\"bhdouglass.com\" src=\"https://stats.bhdouglass.com/js/plausible.js\"></script></head>|g' dist/resume/index.html",
    "preview": "NODE_ENV=development astro preview",
    "new-post": "node scripts/new-post.js",
    "publish-draft": "node scripts/publish-draft.js",
    "resume-export": "resume export --theme kendall-projects --resume src/data/resume.json public/resume/index.html",
    "resume-serve": "resume serve --theme kendall-projects --resume src/data/resume.json --dir .tmp",
    "optimize-jpeg": "jpegoptim --strip-all --overwrite --max=90"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/bhdouglass/bhdouglass-com.git"
  },
  "author": "Brian Douglass",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/bhdouglass/bhdouglass-com/issues"
  },
  "homepage": "https://bhdouglass.com",
  "devDependencies": {
    "@astrojs/rss": "^1.0.0",
    "@astrojs/sitemap": "^1.0.0",
    "astro": "^1.0.1",
    "autoprefixer": "^10.4.8",
    "chalk": "^5.0.1",
    "date-fns": "^2.29.1",
    "fractional": "^1.0.0",
    "inquirer": "^9.1.0",
    "jsonresume-theme-kendall": "^0.2.0",
    "jsonresume-theme-kendall-projects": "^0.2.1",
    "resume-cli": "^3.0.5"
  },
  "dependencies": {
    "bootstrap": "^5.2.0",
    "rehype-highlight": "^5.0.2"
  }
}
