{
  "name": "bhdouglass.com",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev --verbose",
    "start": "npm run dev",
    "copy-bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css* public/css/",
    "build": "npm run copy-bootstrap && astro build && npm run fix-404",
    "fix-404": "sed -i 's=../assets=/assets=g' dist/404.html",
    "preview": "astro preview",
    "deploy": "npm run build && surge ./dist/ --domain https://bhdouglass.com",
    "new-post": "node scripts/new-post.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/bhdouglass/bhdouglass-com.git"
  },
  "author": "Brian Douglass",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/bhdouglass/bhdouglass-com/issues"
  },
  "homepage": "https://bhdouglass.com",
  "devDependencies": {
    "astro": "^0.22.13",
    "autoprefixer": "^10.4.2",
    "chalk": "^5.0.0",
    "date-fns": "^2.28.0",
    "inquirer": "^8.2.0",
    "surge": "^0.23.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "rehype-highlight": "^5.0.2"
  }
}
